<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php
    #RewriteRule ^([a-z]+)\/?$ $1.php [NC]
    
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.*)$ $1.html
    #RewriteRule ^([a-z]+)\/?$ $1.html [NC]
    
    # disable directory browsing
    Options All -Indexes
	
	# error document
	ErrorDocument 400	http://localhost/desainerweb.id/app/gocek/error/400
	ErrorDocument 401	http://localhost/desainerweb.id/app/gocek/error/401
	ErrorDocument 403	http://localhost/desainerweb.id/app/gocek/error/403
	ErrorDocument 404	http://localhost/desainerweb.id/app/gocek/error/404
	ErrorDocument 406	http://localhost/desainerweb.id/app/gocek/error/406
	ErrorDocument 500	http://localhost/desainerweb.id/app/gocek/error/500
</IfModule>